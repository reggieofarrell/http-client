{
  "name": "@reggieofarrell/http-client",
  "version": "1.0.3",
  "description": "A lightweight HTTP client for both the server and browser built on `xior` with retry functionality, written in TypeScript",
  "author": "Reggie O'Farrell",
  "license": "0BSD",
  "repository": {
    "type": "git",
    "url": "https://github.com/reggieofarrell/http-client.git"
  },
  "bugs": {
    "url": "https://github.com/reggieofarrell/http-client/issues"
  },
  "keywords": [
    "http",
    "retry",
    "xior",
    "axios",
    "fetch",
    "client",
    "typescript"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && rollup -c",
    "start": "tsc --watch",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "format": "prettier --write .",
    "linkMe": "npm link",
    "unlinkMe": "npm unlink -g && npm i"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jest": "^29.6.2",
    "prettier": "^3.6.2",
    "rollup": "^3.26.2",
    "ts-jest": "^29.1.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "serialize-error": "^11.0.3",
    "xior": "^0.7.8"
  },
  "homepage": "https://github.com/reggieofarrell/http-client#readme"
}
